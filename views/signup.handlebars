<div class="card login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
        <div class="field">
            <p class="control">
                <label for="username-signup">Username:</label>
                <input class="input" id="username-signup" type="username" placeholder="Username">
            </p>
        </div>
        <div class="field">
            <p class="control">
                <label for="password-signup">Password:</label>
                <input class="input" id="password-signup" type="password" placeholder="Password">
            </p>
        </div>
        <div class="form-group">
            <button class="button" type="submit">Signup</button>
        </div>
    </form>
    <p>Already have an account? <a href="/login">Login instead</a></p>
</div>

<script src="./js/signup.js"></script>