<div class="card login-card">
  <label class="label is-medium">Login:</label>
  <form class="form login-form is-block">
    <div class="field">
      <p class="control">
        <label for="username-login">Username:</label>
        <input class="input" id="username-login" type="username" placeholder="Username">
      </p>
    </div>
    <div class="field">
      <p class="control">
        <label for="password-login">Password:</label>
        <input class="input" id="password-login" type="password" placeholder="Password">
      </p>
    </div>
    <div class="form-group">
      <button class="button" type="submit">Login</button>
    </div>
  </form>
  <p>Don't have an account? <a href="/signup">Signup</a></p>
</div>

<script src="./js/login.js"></script>